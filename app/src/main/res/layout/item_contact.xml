<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:checkable="true"
        app:cardCornerRadius="@dimen/card_border_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewAvatar"
                android:layout_width="@dimen/card_avatar_width"
                android:layout_height="@dimen/card_avatar_height"
                android:layout_marginHorizontal="@dimen/small_margin"
                android:layout_marginVertical="@dimen/small_margin"
                android:src="@drawable/avatar" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/card_name_start_margin"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_text_name"
                    android:textColor="@color/card_name_color"
                    android:textSize="@dimen/card_name_font_size"
                    app:fontFamily="@font/open_sans" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_text_career"
                    android:textColor="@color/card_career_color"
                    android:textSize="@dimen/card_career_font_size"
                    app:fontFamily="@font/open_sans" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/top_menu_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/normal_margin"
                android:src="@drawable/ic_basket" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>